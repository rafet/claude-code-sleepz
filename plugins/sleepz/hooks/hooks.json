{
  "description": "Sleepz hook that adjusts sleep durations in Bash commands to account for permission dialog wait time",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/sleepz_hook.sh",
            "timeout": 10000
          }
        ]
      }
    ]
  }
}
