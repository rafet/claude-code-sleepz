{
  "description": "Smart sleep hook that adjusts sleep durations in Bash commands to account for permission dialog wait time",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/smart_sleep_hook.py",
            "timeout": 10000
          }
        ]
      }
    ]
  }
}
